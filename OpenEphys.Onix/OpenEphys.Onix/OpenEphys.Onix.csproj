    <PackageTags>Bonsai Rx Open Ephys Onix</PackageTags>
    <TargetFramework>net472</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <VersionPrefix>0.1.0</VersionPrefix>
